{
  "version": 2,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "src/server.js"
    }
  ],
  "functions": {
    "src/server.js": {
      "maxDuration": 60,
      "includeFiles": "src/certs/**"
    }
  },
  "crons": [
    {
      "path": "/api/cron/streak-check",
      "schedule": "0 0 * * *"
    }
  ]
}